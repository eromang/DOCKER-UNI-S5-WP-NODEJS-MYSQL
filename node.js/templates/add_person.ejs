
   <%- include header %>
   <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
        <h2><span class="label label-default">COVID-19 contact list</span></h2>
        <p></p>

        <% if (message.length > 0) { %>
          <div class="alert alert-success" role="alert">
            <strong>Well done!</strong> <%= message %>. <a href="/">Return to home page</a>
          </div>
        <% } %>

        <form action="/add_person" method="POST">

        <ul class="list-group">
          
          <li class="list-group-item active"><h5>Add a person</h5></li>
          <li class="list-group-item"><b>Last name:</b> <input type="text" name="personLastName"></li>
          <li class="list-group-item"><b>First name:</b> <input type="text" name="personFirstName"></li>
          <li class="list-group-item"><b>Nationality</b> <input type="text" name="personNationality"></li>
          <li class="list-group-item"><b>Address:</b> <input type="text" name="personAddress"></li>
          <li class="list-group-item"><b>Zip code:</b> <input type="text" name="personZipCode"></li>
          <li class="list-group-item"><b>City:</b> <input type="text" name="personCity"></li>
          <li class="list-group-item"><b>Country:</b> <input type="text" name="personCountry"></li>
          <li class="list-group-item"><b>Mobile number:</b> <input type="text" name="personMobile"></li>
          <li class="list-group-item"><b>Email:</b> <input type="email" name="personEmail"></li>
         
        </ul>

        <button class="btn btn-xs btn-danger" type="submit">Add Person</button>

        </form>

      </div>
    <%- include footer %>
